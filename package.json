{
  "name": "roomloop-server",
  "version": "1.0.0",
  "description": "Backend server for RoomLoop - The Drop-In Events & Micro-Meetup Platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npx nodemon --watch \"src/**/*.ts\" --exec \"npx ts-node\" src/index.ts",
    "build": "tsc",
    "postinstall": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "events",
    "meetup",
    "rooms",
    "chat"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "compression": "1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "7.2.1",
    "helmet": "^7.1.0",
    "ioredis": "5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "1.10.0",
    "react-router-dom": "^7.5.3",
    "redis": "5.6.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "1.8.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "1.9.10",
    "@types/node": "^20.5.7",
    "@types/supertest": "6.0.3",
    "jest": "30.0.4",
    "mongodb-memory-server": "10.1.4",
    "nodemon": "^3.1.10",
    "supertest": "7.1.3",
    "ts-jest": "29.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
